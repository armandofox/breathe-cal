<% begin; first_name = current_client.name.split(" ").first; rescue Exception; first_name = nil; end %>
<% begin; dt = (DateTime.now + Rational(-8,24)).to_formatted_s(:custom); rescue Exception; dt = nil; end%>


<div style="height: 100%; padding:18px 20px;">
    <div style="float: left; margin-top: 5px;">
        <%= link_to(image_tag('breathe_square.png', id: "breathe", alt: "Breathe Bay Area", width: 75, height: 75), "http://www.breathebayarea.org") %> 
    </div>
    <div style="padding-left: 110px; color: white;">
        <div style="font-family: 'Open Sans', sans-serif; font-size: 24px">Welcome <%= first_name || "user" %></div>
        <div style="font-family: 'Open Sans', sans-serif; font-size: 20px"><%= dt%></div>
    </div>
    <marquee behavior="scroll" direction="left" scrollamount="5" >
        <div id = "spare_alert" > High pollen levels in Berkeley, CA </div>
    </marquee>
</div>